# Environment: dev | prod
ENVIRONMENT=dev

# Database Configuration - Development
DATABASE_URL_DEV="postgresql://user:password@localhost:5432/strakly_dev?pgbouncer=true"

# Database Configuration - Production
DATABASE_URL_PROD="postgresql://user:password@prod-host:5432/strakly_prod?pgbouncer=true"

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Server Configuration
PORT=3000

# OpenAI Configuration (for activity simulation)
OPENAI_API_KEY=your-openai-api-key

# ZeptoMail Transactional API Configuration (for email service)
ZEPTOMAIL_API_URL=https://api.zeptomail.in/v1.1/sg/email
ZEPTOMAIL_API_KEY=Zoho-enczapikey your-zeptomail-api-key
ZEPTOMAIL_FROM_EMAIL=support@strakly.com
ZEPTOMAIL_FROM_NAME=Strakly

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CloudAMQP (RabbitMQ)
CLOUDAMQP_URL=amqps://user:password@host.cloudamqp.com/vhost
